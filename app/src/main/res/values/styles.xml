        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="editTextColor">@color/textColorDarkTheme</item>
        <item name="customTextColor">@color/textColorDarkTheme</item>
        <item name="android:textColorPrimary">@color/textColorDarkTheme</item>
        <item name="android:textColorSecondary">@color/textColorDarkTheme</item>
        <item name="android:textColorTertiary">@color/textColorDarkTheme</item>
        <item name="android:textColorPrimaryInverse">@color/textColorDarkTheme</item>
        <item name="android:textColorSecondaryInverse">@color/textColorDarkTheme</item>
        <item name="android:textColorTertiaryInverse">@color/textColorDarkTheme</item>
        <item name="colorIconIfBgWhite">@color/colorIconIfBgWhiteDarkTheme</item>

        <item name="navBotBackgroundColor">@color/navBackgroundColorDarkTheme</item>
        <item name="componentBackgroundColor">@color/componentBgDarkTheme</item>
        <item name="colorIconWithoutBackground">@color/colorIconWithoutBgDarkTheme</item>
        <item name="colorIconWithBackground">@color/colorIconWithBackgroundDarkTheme</item>
        <item name="backgroundForIcon">@color/backgroundForIconDarkTheme</item>
        <item name="colorIconForNav">@color/colorIconForNavDarkTheme</item>
        <item name="buttonPressedColor">@color/buttonPressedColorDarkTheme</item>
        <item name="backgroundShading">@color/backgroundShadingDarkTheme</item>

        <item name="expenseIconColor">@color/expenseIconDarkTheme</item>
        <item name="angryMoodBackground">@color/angryMoodDarkTheme</item>
        <item name="happyMoodBackground">@color/happyMoodDarkTheme</item>
        <item name="sadMoodBackground">@color/sadMoodDarkTheme</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
