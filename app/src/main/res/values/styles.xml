<!--    Custom FAB-->
    <style name="CustomFab">
        <item name="android:background">@drawable/additional_menu_labels</item>
        <item name="android:textColor">@color/white</item>
    </style>

<!--    Custom Time Picker-->
    <style name="DialogDarkTheme" parent="android:Theme.Holo.Dialog.MinWidth">
        <item name="colorPrimary">@color/navBackgroundColorDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDarkTheme</item>
        <item name="colorAccent">@color/navBackgroundColorDarkTheme</item>
        <item name="colorControlNormal">@color/textColorDarkTheme</item>
        <item name="colorOnPrimary">@color/textColorDarkTheme</item>
        <item name="colorOnSecondary">@color/textColorDarkTheme</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="DialogLightTheme" parent="android:Theme.Holo.Light.Dialog.MinWidth">
